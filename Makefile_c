MF=	Makefile_c

# For Cirrus
#CC=	mpicc
#CFLAGS=	-cc=icc

# For ARCHER
CC=	cc
CFLAGS=	-g

LFLAGS=	-lm

EXE=	hello

INC= \
#	No user-defined include files at present - list here if required.

SRC= \
	hello.c

#
# No need to edit below this line
#

.SUFFIXES:
.SUFFIXES: .c .o

OBJ=	$(SRC:.c=.o)

.c.o:
	$(CC) $(CFLAGS) -c $<

all:	$(EXE)

$(OBJ):	$(INC)

$(EXE):	$(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(LFLAGS)

$(OBJ):	$(MF)

clean:
	rm -f $(OBJ) $(EXE) core
